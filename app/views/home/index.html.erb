<div class="max-w-5xl mx-auto">
  <div class="bg-surface0 rounded-lg shadow mb-8">
    <div class="p-6 md:p-8">
      <h1 class="text-3xl font-bold text-primary mb-4">Welcome to Multipost</h1>
      <p class="text-secondary mb-6">Your intelligent content sharing dashboard</p>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Posts Card -->
        <div class="bg-surface1 rounded-lg p-5 transform transition hover:scale-105">
          <div class="flex items-center mb-3">
            <div class="p-2 rounded-full bg-surface2 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-blue">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary">Posts</h3>
          </div>
          <p class="text-tertiary mb-3">Manage your posts across platforms</p>
          <%= link_to posts_path, class: "inline-flex items-center text-blue" do %>
            View posts
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          <% end %>
        </div>
        
        <!-- Drafts Card -->
        <div class="bg-surface1 rounded-lg p-5 transform transition hover:scale-105">
          <div class="flex items-center mb-3">
            <div class="p-2 rounded-full bg-surface2 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-teal">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary">Drafts</h3>
          </div>
          <p class="text-tertiary mb-3">Work on content before posting</p>
          <%= link_to drafts_path, class: "inline-flex items-center text-teal" do %>
            View drafts
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          <% end %>
        </div>
        
        <!-- Accounts Card -->
        <div class="bg-surface1 rounded-lg p-5 transform transition hover:scale-105">
          <div class="flex items-center mb-3">
            <div class="p-2 rounded-full bg-surface2 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-mauve">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary">Accounts</h3>
          </div>
          <p class="text-tertiary mb-3">Manage connected platforms</p>
          <%= link_to accounts_path, class: "inline-flex items-center text-mauve" do %>
            View accounts
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          <% end %>
        </div>
        
        <!-- Settings Card -->
        <div class="bg-surface1 rounded-lg p-5 transform transition hover:scale-105">
          <div class="flex items-center mb-3">
            <div class="p-2 rounded-full bg-surface2 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-yellow">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary">Settings</h3>
          </div>
          <p class="text-tertiary mb-3">Customize your experience</p>
          <%= link_to splitting_configurations_path, class: "inline-flex items-center text-yellow" do %>
            AI settings
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Create Section -->
  <div class="bg-surface0 rounded-lg shadow mb-8 p-6">
    <h2 class="text-xl font-medium text-primary mb-4">Quick Create</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- New Post Button -->
      <%= link_to new_post_path, class: "flex items-center p-4 bg-surface1 rounded-lg hover:bg-surface2 transition-colors" do %>
        <div class="p-3 rounded-full bg-accent text-white mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </div>
        <div>
          <h3 class="font-medium text-primary mb-1">New Post</h3>
          <p class="text-sm text-tertiary">Create and publish to multiple platforms</p>
        </div>
      <% end %>
      
      <!-- New Thread Button -->
      <%= link_to new_post_path(thread: true), class: "flex items-center p-4 bg-surface1 rounded-lg hover:bg-surface2 transition-colors" do %>
        <div class="p-3 rounded-full bg-teal text-white mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z" />
          </svg>
        </div>
        <div>
          <h3 class="font-medium text-primary mb-1">New Thread</h3>
          <p class="text-sm text-tertiary">Create a multi-post thread</p>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="bg-surface0 rounded-lg shadow p-6">
    <h2 class="text-xl font-medium text-primary mb-4">Recent Activity</h2>
    
    <% if current_user.posts.any? %>
      <div class="divide-y divide-subtle">
        <% current_user.posts.order(created_at: :desc).limit(5).each do |post| %>
          <div class="py-3 flex justify-between items-center">
            <div>
              <p class="text-primary line-clamp-1 mb-1"><%= post.content %></p>
              <div class="flex items-center text-xs text-tertiary">
                <span class="mr-2"><%= time_ago_in_words(post.created_at) %> ago</span>
                <span class="flex items-center">
                  <% post.selected_platforms&.each do |platform| %>
                    <span class="platform-icon-small <%= platform %> mr-1"></span>
                  <% end %>
                </span>
              </div>
            </div>
            <span class="px-2 py-1 rounded text-xs <%= post.status == 'published' ? 'bg-green-100 text-green-800' : (post.status == 'failed' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800') %>">
              <%= post.status.capitalize %>
            </span>
          </div>
        <% end %>
      </div>
      
      <div class="mt-4 text-center">
        <%= link_to posts_path, class: "text-accent hover:text-accent-hover" do %>
          View all posts
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-6">
        <div class="text-tertiary mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-primary mb-2">No posts yet</h3>
        <p class="text-secondary mb-4">Create your first post to get started</p>
        
        <%= link_to new_post_path, class: "inline-flex items-center bg-accent hover:bg-accent-hover text-white py-2 px-4 rounded-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Create Post
        <% end %>
      </div>
    <% end %>
  </div>
</div>