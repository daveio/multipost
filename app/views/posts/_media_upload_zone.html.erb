<div class="media-upload-zone mt-4" 
     data-controller="media-upload" 
     data-media-upload-upload-url-value="<%= media_files_path %>"
     data-media-upload-max-files-value="4"
     data-media-upload-max-size-value="<%= 10 * 1024 * 1024 %>">
  
  <!-- Hidden file input -->
  <input type="file" multiple accept="image/*,video/*" class="hidden" 
         data-media-upload-target="input" 
         data-action="change->media-upload#filesSelected">
  
  <!-- Dropzone -->
  <div class="border-2 border-dashed border-subtle rounded-lg p-4 text-center cursor-pointer hover:bg-surface1 transition-colors"
       data-media-upload-target="dropzone"
       data-action="click->media-upload#triggerFileInput">
    <div class="mx-auto flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mx-auto h-12 w-12 text-tertiary">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
      </svg>
    </div>
    <h4 class="mt-2 text-sm font-medium text-secondary">Drag and drop media files here</h4>
    <p class="mt-1 text-xs text-tertiary">or click to browse (max 4 files, 10MB each)</p>
    <p class="mt-2 text-xs text-tertiary">Supported formats: JPEG, PNG, GIF, MP4, etc.</p>
  </div>
  
  <!-- Progress indicator (hidden initially) -->
  <div class="hidden mt-3" data-media-upload-target="progress">
    <div class="h-1 bg-surface1 rounded-full overflow-hidden">
      <div class="h-full bg-accent rounded-full" style="width: 0%"></div>
    </div>
    <p class="text-xs text-tertiary mt-1 progress-label">Uploading...</p>
  </div>
  
  <!-- Media files grid (hidden initially) -->
  <div class="mt-4 hidden" data-media-upload-target="container">
    <h4 class="text-sm font-medium text-secondary mb-2">Attached media</h4>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4" data-media-upload-target="fileList"></div>
  </div>
</div>