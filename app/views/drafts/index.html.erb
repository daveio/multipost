<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-primary">Your Drafts</h1>
      <p class="text-secondary">Save your content to finish later</p>
    </div>
    
    <%= link_to new_post_path, class: "bg-accent hover:bg-accent-hover text-white py-2 px-4 rounded-lg flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      New Post
    <% end %>
  </div>
  
  <div class="bg-surface0 rounded-lg shadow overflow-hidden">
    <% if @drafts.any? %>
      <div class="divide-y divide-subtle">
        <% @drafts.each do |draft| %>
          <div class="p-4 hover:bg-surface1 transition-colors">
            <div class="flex justify-between items-start">
              <div class="flex-grow mr-4">
                <p class="text-primary line-clamp-2 mb-2"><%= draft.content %></p>
                
                <div class="flex items-center text-sm text-tertiary">
                  <span class="mr-4">Last edited <%= time_ago_in_words(draft.updated_at) %> ago</span>
                  
                  <% if draft.is_thread %>
                    <span class="flex items-center mr-4">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z" />
                      </svg>
                      Thread
                    </span>
                  <% end %>
                  
                  <span class="flex items-center">
                    <% draft.selected_platforms.each do |platform| %>
                      <span class="platform-icon-small <%= platform %> mr-1"></span>
                    <% end %>
                  </span>
                </div>
              </div>
              
              <div class="flex space-x-2">
                <%= link_to new_post_path(draft_id: draft.id), class: "text-primary hover:text-accent" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                  </svg>
                <% end %>
                
                <%= link_to draft_path(draft), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this draft?' }, class: "text-primary hover:text-red" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-8 text-center">
        <div class="mb-4 text-tertiary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
        </div>
        <h3 class="text-xl font-medium text-primary mb-2">No drafts yet</h3>
        <p class="text-secondary mb-6">Save your posts as drafts to finish them later</p>
        
        <%= link_to new_post_path, class: "bg-accent hover:bg-accent-hover text-white py-2 px-4 rounded-lg inline-flex items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Create Post
        <% end %>
      </div>
    <% end %>
  </div>
</div>